---
import "../style/globals.css";
const { titulo, txt_opt1, txt_opt2, txt_opt3, link, parrafo } = Astro.props;
---

<section>
	<div class="degradado"></div>
	<div class="wrapper">
		<h2>{titulo}</h2>
		<div class="mini-botones">
			<a href="">{txt_opt1}</a>
			<a href="">{txt_opt2}</a>
			<a href="">{txt_opt3}</a>
		</div>
		<a href="">{link}</a>
		<p>{parrafo}</p>
		<button>
			<a href="">COMPRAR</a>
		</button>
	</div>
</section>

<style>
	section {
		/* flex-configs */
		display: flex;
		flex-direction: column;
		justify-content: space-around;
		align-items: stretch;

		/* property-configs */
		position: relative;
		z-index: 0;
		background-blend-mode: luminosity;
		background-color: var(--golfgreen);
		background-image: url(./almuerzos.jpg);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;

		/* DEGRADADO */
		.degradado {
			position: absolute;
			z-index: -10;
			height: 100%;
			width: 100%;
			z-index: -10;
			background: rgb(255, 255, 255);
			background: linear-gradient(
				0deg,
				rgba(255, 255, 255, 0) 20%,
				rgba(0, 0, 0, 1) 95%
			);
		}

		.wrapper {
			/* property-configs */
			padding: 30px;

			h2 {
				color: var(--yellow);
				font-size: 2.8rem;
				font-family: var(--titlefont);
				margin-top: 40px;
			}

			a {
				margin-top: 2px;
				color: var(--palegreen);
			}

			p {
				color: var(--white);
				margin-top: 10px;
				width: 80%;
				text-wrap: pretty;
			}

			button {
				width: fit-content;
				margin-top: 150px;
				padding: 4px 24px 4px 24px;
				background: var(--black);
				border-radius: 16px;

				a {
					color: var(--yellow);
					font-family: var(--titlefont);
					font-size: 2rem;
				}
			}

			.mini-botones {
				/* flex-configs */
				display: flex;
				flex-direction: row;
				justify-content: stretch;
				align-items: center;
				gap: 6px;

				a {
					margin-top: 2px;
					padding: 1px 12px 1px 12px;
					border-radius: 16px;
					border: thin solid var(--golfgreen);
					background: linear-gradient(
						0deg,
						rgba(255, 255, 255, 0) 20%,
						rgba(0, 0, 0, 1) 95%
					);
				}
			}
		}
	}
</style>
